<div class="login">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :class => "internal-account" }) do |f| %>
    <div>
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div>
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="inline">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <%= f.submit "Log in", :class => "btn btn-success" %>
    <p class="text-center text-muted">
      <small>Don't have an account yet? <%= link_to "Sign up", new_registration_path(resource_name) %></small>
    </p>
  <% end %>

  <div class="signup-or-separator">
    <h6 class="text">or</h6>
    <hr>
  </div>

  <%- if devise_mapping.omniauthable? %>
    <div class="other-account">
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to omniauth_authorize_path(resource_name, provider), :class => "btn btn-#{provider.downcase}" do %>
          <i class="icon-ok icon-white"></i> Sign in with <%= OmniAuth::Utils.camelize(provider) %>
        <% end %>
      <% end -%>
    </div>
  <% end -%>
</div>
